{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "setup": {
          "cmds": [
            "composer install --no-dev --optimize-autoloader --prefer-dist",
            "npm install",
            "npm run build"
          ]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "php artisan migrate --force && php artisan config:cache && php artisan route:cache && php artisan serve --host 0.0.0.0 --port ${PORT:-8080}",
    "restartPolicyType": "ON_FAILURE",
    "healthcheckPath": "/"
  }
}

